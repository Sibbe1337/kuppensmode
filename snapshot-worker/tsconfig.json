{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "lib", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "baseUrl": ".", 
    "resolveJsonModule": true 
  },
  "include": [
    "index.ts"
  ],
  "exclude": ["node_modules", "lib"]
}
