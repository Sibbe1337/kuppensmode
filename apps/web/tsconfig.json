{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "plugins": [{ "name": "next" }],
    "types": ["node", "jest"]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "app/**/*",
    "*.ts",
    "*.tsx",
    "*.js",
    "components.json"
  ],
  "references": [
    { "path": "../../packages/common-types" },
    { "path": "../../packages/storage-adapters" },
    { "path": "../../packages/config" }
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
} 