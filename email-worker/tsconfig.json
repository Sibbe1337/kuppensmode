{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "rootDir": ".",
    "module": "NodeNext",
    "emitDeclarationOnly": false,
    "noEmit": false,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["index.ts", "src/**/*.ts"],
  "references": [
    { "path": "../packages/common-types" },
    { "path": "../packages/storage-adapters" },
    { "path": "../packages/config" }
  ],
  "exclude": ["node_modules", "dist"]
} 