{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./packages/shared/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "packages/**/*.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "middleware.ts",
    "instrumentation.ts",
    "instrumentation-client.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "functions",
    "snapshot-worker/**",
    "restore-worker/**",
    "email-worker/**",
    "demo-data/**"
  ]
}
