{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "baseUrl": "."
  },
  "include": [
    "index.ts", 
    "*.Adapter.ts",
    "types/**/*.ts",
    "storage/**/*.ts"
  ],
  "exclude": ["node_modules", "lib"]
} 