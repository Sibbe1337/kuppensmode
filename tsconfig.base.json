{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2020", "dom", "dom.iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler", // or "node" or "NodeNext", bundler is modern
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "noEmit": true, // Often true for base, overridden by packages that need to emit .d.ts
    "jsx": "preserve"
  },
  "exclude": ["node_modules", ".next", "dist"]
} 