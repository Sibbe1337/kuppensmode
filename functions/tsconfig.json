{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    /* ---- Firebase Functions runtime ---- */
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["ESNext"],

    /* ---- module / JSX interop ---- */
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",

    /* ---- project-local stuff ---- */
    "rootDir": "src",
    "outDir": "lib",
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
